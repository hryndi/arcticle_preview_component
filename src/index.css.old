@import url("https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap");

:root {
  line-height: 1.5;
  font-family: "Manrope", sans-serif;
  font-weight: 400;
}

body {
  margin: 0;
  padding: 0;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: hsl(210, 46%, 95%);
}
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-size: 16px;
}

main {
  margin-inline: 1.5rem;

  border-radius: 1rem;
  background-color: white;
  /* border: black 1px solid; */

  /* display: flex;
  flex-direction: column; */

  display: grid;
  grid-template-columns: 1fr;

  overflow: hidden;
}

img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  /* height: 15.5rem; */
  /* aspect-ratio: 5/3; */
}

.content {
  /* border: orange 1px solid; */
  padding-inline: 2rem;
}
.content > .posted-by {
}
.posted-by .profile {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.shared {
  background-color: hsl(219, 50%, 74%);
  height: 33px;
  border-radius: 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
  aspect-ratio: 1;
}

.shared {
}
.shared img {
  width: 15px;
  height: 15px;
}

h1 {
  font-weight: 700;
  font-size: 1rem;
  letter-spacing: 0px;
  margin-top: 2.2rem;
  /* margin-top: 2rem; */
  color: hsl(217, 19%, 35%);
}

p {
  padding-right: 10px;
  margin-top: 1rem;
  font-weight: 500;
  font-size: 0.8rem;
  color: hsl(212, 23%, 69%);
}

span {
  font-size: 0.8rem;
}
.posted-by {
  min-height: 3rem;
  margin-top: 2rem;
  margin-bottom: 1rem;
  width: 100%;
  display: flex;
  align-items: flex-start;
  align-items: center;
  justify-content: space-between;
}
.share-menu {
}
.author {
  padding-left: 1.5rem;

  border-radius: 50%;
  /* width: 100%; */
  flex: 1;
}
.author h2 {
  font-size: 14px;
}

@media (min-width: 500px) {
  main {
    /* flex-direction: row;*/
    max-width: 730px;
    grid-template-columns: 1fr 1fr;
  }
}

.share-menu {
  /* margin-inline: 1.5rem; */
  width: 10rem;
  height: 5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 0.9rem;
  clip-path: polygon(100% 0, 100% 59%, 63% 60%, 49% 100%, 37% 60%, 0% 60%, 0 0);
  background-color: bisque;
  padding-bottom: 2em;
  padding-inline: 1em;
  translate: 6em -5em;
  position: fixed;
}

.share-menu {
}

.share-menu h2 {
  display: inline-block;
  vertical-align: middle;
  font-weight: 400;
  letter-spacing: 0.3rem;
  color: white;
}

.share-menu img {
  background-color: hidden(236, 33%, 16%);
  width: 30px;
  height: 20px;
  object-fit: cover;
}

.active {
  background-color: hsl(236, 33%, 16%);
  box-shadow: hsl(236, 33%, 16%) 0px 20px 0px 35px;
  display: flex;
  justify-content: flex-end;
}

.active > img {
}
